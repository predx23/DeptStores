@model DeptStores.Models.store

@{
    ViewBag.Title = "Delete";
}

<br />
<h2>Delete</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container details" style="min-width:500px;">

        <h4>Are you sure you want to delete this store from the list?</h4>
        <hr />

        <div class="container" style="margin-left:20px;">

            <div style="margin-left:40px;">
                <img style="border-radius: 5px; box-shadow:0px 5px 25px rgba(0,0,0,0.4);" src="@Url.Content(Model.Picture)" height="175" />
                <p> <label style="font-size:9px; font-weight:300; font-style:italic;">Courtesy of: @Html.DisplayTextFor(model => model.Pic_Courtesy_of)</label> </p>
            </div>
            <br />

            <ul class="list-inline">
                <li style="font-weight:bold;">Name:</li>
                @Html.DisplayFor(model => model.Name)
            </ul>

            <ul class="list-inline">
                <li style="font-weight:bold;">Location:</li>
                @Html.DisplayFor(model => model.Location)
            </ul>

            <ul class="list-inline">
                <li style="font-weight:bold;">Last edited by:</li>
                @Html.DisplayFor(model => model.Added_by)
            </ul>

            <ul class="list-inline">
                <li style="font-weight:bold;">Date created:</li>
                @Html.DisplayFor(model => model.Created_Date)
            </ul>
                        
            <br />

            <div class="form-actions" style="margin-left:40px;">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>

            <br />

        </div>

    </div>
}